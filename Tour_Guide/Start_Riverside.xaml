<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Tour_Guide.Start_Riverside">
    <ContentPage.Content>
          <ScrollView>
        <StackLayout>
        <Label Text="Where to start?"
         HorizontalTextAlignment="Center" 
         FontSize="Large" 
         Margin="0,20,0,0">
          </Label>

        <Image Source="Riverside_Start.png" WidthRequest="350" Margin="0,30,0,0"/>

       <Label Text="The trail starts just off Millenium Way next to the Stadium of Light, down an allyway to the riverside"
         HorizontalTextAlignment="Center" 
         FontSize="Medium" 
         Margin="0,20,0,20">
          </Label>

             
          <Button Text="Touch to show start on Maps" TextColor="White" BackgroundColor="#007AFF"  Margin="50,10,50,20" />
                
          </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
